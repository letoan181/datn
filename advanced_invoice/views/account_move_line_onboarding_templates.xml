<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ONBOARDING PANELS -->
    <template id="account_move_line_onboarding_panel" name="account.move.line.onboarding.panel">
        <div class="o_onboarding_container collapse show">
            <div class="o_onboarding  o_onboarding_blue"
                 style="background-image:url(/account/static/src/img/account_invoice_onboarding_bg.jpg)">
                <div class="o_onboarding_wrap">
                    <a href="#" data-toggle="modal" data-target=".o_onboarding_modal"
                       class="float-right o_onboarding_btn_close">
                    </a>
                    <div class="o_onboarding_steps">
                        <div class="o_onboarding_step o_onboarding_done">
                            <span class="o_onboarding_dot d-none d-md-inline-block fa fa-check"/>
                            <div class="o_onboarding_step_content">
                                <div class="o_onboarding_step_content_info">
                                    <!--<h4 class="o_onboarding_step_title mt16">Current Account Data</h4>-->
                                    <p class="mb16">
                                        <h3>
                                            <strong>Balance:
                                                <t t-esc="current_account_balance"/>
                                            </strong>
                                        </h3>
                                    </p>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </template>
</odoo>
