<odoo>
    <data>
        <record id="users_form_view_add_project_type" model="ir.ui.view">
            <field name="name">users_form_view_add_project_type</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='login']" position="after">
                    <separator/>
                    <field name="project_user_type" string="User Type" widget="radio"/>
                    <separator/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>