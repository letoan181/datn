<odoo>
    <data>
        <record id="user_roles_change_password_wizard_view" model="ir.ui.view">
            <field name="name">Change Password</field>
            <field name="model">change.password.login</field>
            <field name="arch" type="xml">
                <form string="Change Password">
                    <group>
                        <field name="user_ids" invisible="1"/>
                        <field name="new_password" password="True"/>
                    </group>
                    <footer>
                        <button string="Change Password" type="object" name="change_password_button"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>